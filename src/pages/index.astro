---
interface Frontmatter {
	title: string;
	description: string;
	readingTime: string;
}

import MainLayout from '@layouts/MainLayout.astro';

const articles = await Astro.glob<Frontmatter>('./blog/**/*.mdx');
---

<MainLayout>
	<h1>Astro</h1>
	<p class:list={['hey', 'there', { ok: true }]}>Hey</p>

	<ul>
		{
			articles.length &&
				articles.map(({ url, frontmatter }) => (
					<li>
						<a href={url && url}>{frontmatter.title}</a>
						<p>{frontmatter.readingTime}</p>
					</li>
				))
		}
	</ul>
</MainLayout>

<style lang="scss"></style>
